<idea-plugin>
    <id>com.github.godmoonlight.attastyle</id>
    <name>atta-style</name>
    <vendor>godmoonlight</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.godmoonlight.attastyle.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.godmoonlight.attastyle.services.MyProjectService"/>
        <applicationConfigurable
          id="attaStyleSetting"
          bundle="messages.MyBundle"
          parentId="tools"
          instance="com.github.godmoonlight.attastyle.settings.AppSettingsConfigurable"
          displayName="Atta Style"/>
    </extensions>

    <projectListeners>
        <listener class="com.github.godmoonlight.attastyle.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
    <actions>
        <action id="BeanConverter" class="com.github.godmoonlight.attastyle.actions.BeanConverter"
          text="Converter Method"
          description="Generates method for converting the instance of one class to another">
            <add-to-group group-id="JavaGenerateGroup1" anchor="first"/>
        </action>

        <action id="JsonConverter" class="com.github.godmoonlight.attastyle.actions.JsonConverter" text="ToJson"
          description="Java bean convert to json">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

        <action id="YamlConverter" class="com.github.godmoonlight.attastyle.actions.YamlConverter" text="ToYaml"
          description="Java bean convert to json">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

<!--        <group id="Java2JsonMenu" text="Java2Json" popup="true">-->
<!--            <add-to-group group-id="ToolsMenu" anchor="last"/>-->
<!--            <action class="com.linsage.menu.ToggleCommentAction" id="menu_comment" text="Toggle Comment" icon="AllIcons.Actions.Checked"  />-->
<!--            <action class="com.linsage.menu.SponsorAction" id="menu_sponsor" text="Sponsor me" />-->
<!--        </group>-->
    </actions>
</idea-plugin>
